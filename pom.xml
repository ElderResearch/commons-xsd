<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.datamininglab</groupId>
		<artifactId>eri-maven-base</artifactId>
		<version>3.0.2</version>
	</parent>

	<groupId>com.datamininglab.commons</groupId>
	<artifactId>eri-commons-xsd-parent</artifactId>
	<name>ERI Commons - XSD Utilities (Parent POM)</name>
	<description>Utilities for XML schema documents (XSD)</description>
	<version>0.0.8-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<scm>code.elderresearch.com</scm>
	</properties>

	<scm>
		<developerConnection>scm:git:https://${scm}/eri-commons/eri-xsd.git</developerConnection>
		<connection>scm:git:http://${scm}/eri-commons/eri-xsd.git</connection>
		<url>http://${scm}/summary/eri-commons%2Feri-xsd.git</url>
		<tag>HEAD</tag>
	</scm>

	<modules>
		<module>xsd</module>
	</modules>

	<build>
		<plugins>
			<!-- Child projects should instantiate this plugin to generate classes for any XSDs -->
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.12.1</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<args>
						<arg>-Ximmutable</arg>
						<arg>-Xfluent-builder</arg>
						<arg>-Xequals</arg>
						<arg>-XhashCode</arg>
					</args>
					<plugins>
						<plugin>
							<groupId>net.codesup.util</groupId>
							<artifactId>jaxb2-rich-contract-plugin</artifactId>
							<version>1.15.0</version>
						</plugin>
						<plugin>
							<groupId>org.jvnet.jaxb2_commons</groupId>
							<artifactId>jaxb2-basics</artifactId>
							<version>0.11.1</version>
						</plugin>
					</plugins>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>